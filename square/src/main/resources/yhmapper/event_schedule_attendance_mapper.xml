<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="project.ppaya.square.yhmapper.EventScheduleAttendanceMapper">
<select id="selectEventScheduleAttenanceByUserId" parameterType="string" resultType="EventScheduleAttendance">
SELECT
	*
FROM
	TABLE_ESA
WHERE
	USER_ID = #{user_id}
</select>
<select id="getEventScheduleIdByUserId" parameterType="string" resultType="int">
SELECT DISTINCT
	EVENT_SCHEDULE_ID
FROM
	TABLE_ESA
WHERE
	USER_ID = #{user_id}
</select>
</mapper>
