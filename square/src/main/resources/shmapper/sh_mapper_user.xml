<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="project.ppaya.square.shmapper.SH_Mapper_User">
<select id="getGroupByUser"  parameterType="String" resultType="Group">
SELECT
	*
FROM
	TABLE_G
WHERE
	USER_ID = #{USER_ID}
</select>

<select id="getGroupByCategory" parameterType="int" resultType="Group">
SELECT
	*
FROM
	TABLE_G
WHERE
	GROUP_CATEGORY_ID like #{category}
</select>


<select id="getUserByEmail"  parameterType="String" resultType="User">
SELECT
	*
FROM
	TABLE_U
WHERE
	USER_ID = #{USER_ID}
</select>

</mapper>
